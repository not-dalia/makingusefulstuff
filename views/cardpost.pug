.card
	.card-image
		a(href='/posts/'+item.name)
			img(src=item.imageLocation)
	.card-content
		a.hover-underline(href='/posts/'+item.name)
			h3.mus-red-text.card-title(style='margin-top: 8px;') #{item.name.replace(/([A-Z])/g, ' $1').trim()}
		p !{item.content}
	.card-action
		.row(style='margin-bottom: 0; padding: 0 5px; ')
			div.grey-text.text-darken-2(style="float: left; max-width: 59%; ")
				span.comment-text.blue-grey-text.text-lighten-2(style="text-transform: uppercase") #{moment(item.creationDate).format('MMMM Do YYYY, h:mm a')}
			div.grey-text.text-darken-2(style="float: right; max-width: 39%")
				a.comment-text(style="margin-right: 5px" href='/posts/'+item.name) #{item.comment_count} comments
		